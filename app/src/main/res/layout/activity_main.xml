<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        style="@style/image_view"
        android:contentDescription="@string/random_img" />

    <EditText
        android:id="@+id/et_input_img_url"
        style="@style/et_input_img"
        android:hint="@string/write_the_url_of_your_photo"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btn_submit_img"
        style="@style/btn_style"
        android:text="@string/submit_img" />

    <Button
        android:id="@+id/btn_random_img"
        style="@style/btn_style"
        android:text="@string/generate_random_image" />

</LinearLayout>
